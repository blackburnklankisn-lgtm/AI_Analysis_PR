{
    "name": "ai-pr-diagnostic",
    "version": "1.0.0",
    "description": "AI PR Diagnostic Tool - Jira PR Analysis Assistant",
    "main": "main.js",
    "author": "AI Analysis Team",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build --win",
        "build:dir": "electron-builder build --win --dir"
    },
    "dependencies": {
        "electron-is-dev": "^2.0.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.ai.pr.diagnostic",
        "productName": "AI PR Diagnostic",
        "publish": null,
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "frontend/**/*"
        ],
        "extraResources": [
            {
                "from": "backend/dist/backend.exe",
                "to": "backend.exe"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "AI PR Diagnostic"
        }
    }
}